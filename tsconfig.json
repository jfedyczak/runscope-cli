{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"moduleResolution": "node",
		"sourceMap": false,
		"outDir": "dist",
		"baseUrl": ".",
		"strict": true,
		"allowJs": true,
		"paths": {
			"*": ["node_modules/*", "src/types/*"]
		},
		"lib": ["es6"]
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules"]
}
